
<div class="video_create">
  <div class="video_info">

 <% if activity.owner.image_url %>    
    <%= image_tag activity.owner.image_url %>
  <% else %>  
    <%= image_tag asset_path 'default_profile.png' %>
  <% end %>

  <%= link_to activity.trackable.title, post_path(activity.trackable) %> was posted by
  <%= link_to activity.owner.name, user_path(activity.owner) %>
  </div>
  
  <div class="video_preview">
      <%= link_to(image_tag(activity.trackable.video_url_thumbnail), post_path(activity.trackable))  %>
  </div>
</div>
  
